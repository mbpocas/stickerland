<div id="header">
  <%= link_to root_path do %>
    <div class="logo"> <%= image_tag "Logo.png" %> </div>
  <% end %>

  <div class="leftMenu">
    <ul>
      <li>
        <%= link_to "Pesquisar", products_path, class: "dropdown" %>
      </li>
      <li>
        <%= link_to "Categorias", products_path, class: "categorias" %>
      </li>
      <li>
        <%= link_to "Adicionar Sticker", products_path, class: "add-sticker" %>
      </li>
    </ul>
  </div>

  <div class="rightMenu">
    <ul>
        <% if user_signed_in? %>
          <li class="user">
            <%= current_user.first_name + " " + current_user.last_name %>
          </li>
          <li>
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
          </li>
        <% else %>
            <li>
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
        <% end %>
      </div>
    </ul>
  </div>

</div>

