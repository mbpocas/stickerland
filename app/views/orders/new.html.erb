<div class='container'>
  <div class="col-4 grid-product mb-3">

    <div class="card-sticker justify-content-center">
      <%= link_to product_path(@product), class: "grid-detail" do %>
        <% if @product.photo.present? %>
          <%= cl_image_tag(@product.photo.key, width: 400, height: 300, crop: :fill) %>
        <% else %>
          <%= image_tag "neymar.webp", alt: "stickers" %>
        <% end %>
        <div class="card-sticker-infos">
          <div>
            <h2><%= @product.category %></h2>
            <p><strong>Nome: <%= @product.title %></strong></p>
            <p><strong>Cod. Figurinha: <%= @product.sticker %></strong></p>
            <p><small><strong><em><%= @product.user.first_name %> <%= @product.user.last_name %></em></strong></small></p>
          </div>
        </div>
      <% end %>

    </div>

    <div class='mt-5'>
      <%= simple_form_for [@product, @order] do |f| %>

        <%= f.input :my_stickers_id, label: "Selecione sua Figurinha", collection: @current_user_product %>
        <%= f.submit "Trade", class:'btn btn-outline-dark' %>
        <%= link_to 'Cancel', products_path, class: 'btn btn-outline-dark' %>
      <% end %>
    </div>
  </div>
</div>
