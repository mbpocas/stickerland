<div class='container mt-5'>
  <h2 class='h2-home'>TROCA EFETUADA!!!!</h2>


<div class ='troca d-flex justify-content-around'>
    <div class="card-sticker">
      <% if @order.product.photo.present? %>
        <%= cl_image_tag(@order.product.photo.key, width: 400, height: 300, crop: :fit) %>
      <% else %>
        <%= image_tag "neymar.webp", alt: "stickers" %>
      <% end %>
      <div class="card-sticker-infos">
        <div>
          <h2><%= @order.product.category %></h2>
          <p><strong>Nome: <%= @order.product.title %></strong></p>
          <p><strong>Cod. Figurinha: <%= @order.product.sticker %></strong></p>
          <p><small><strong><em><%= @order.product.user.first_name %> <%= @order.product.user.last_name %></em></strong></small></p>
        </div>
      </div>
    </div>

    <div class="card-sticker">
        <%= image_tag "setas", alt: "troca" %>
    </div>

    <div class="card-sticker">
      <% if @order.my_stickers.photo.present? %>
        <%= cl_image_tag(@order.my_stickers.photo.key, width: 400, height: 300, crop: :fit) %>
      <% else %>
        <%= image_tag "neymar.webp", alt: "stickers" %>
      <% end %>
      <div class="card-sticker-infos">
        <div>
          <h2><%= @order.product.category %></h2>
          <p><strong>Nome: <%= @order.product.title %></strong></p>
          <p><strong>Cod. Figurinha: <%= @order.product.sticker %></strong></p>
          <p><small><strong><em><%= @order.product.user.first_name %> <%= @order.product.user.last_name %></em></strong></small></p>
        </div>
      </div>
    </div>

</div>



</div>
