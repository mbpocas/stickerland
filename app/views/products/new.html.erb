<div id="header">
  <%= link_to root_path do %>
    <div class="logo"> <%= image_tag "Logo.png" %> </div>
  <% end %>

  <div class="leftMenu">
    <ul>
      <li>
        <%= link_to "Pesquisar", products_path, class: "dropdown" %>
      </li>
      <li>
        <%= link_to "Minhas Figurinhas", my_stickers_products_path, class: "categorias" %>
      </li>
      <li>
        <%= link_to "Adicionar Sticker", new_product_path, class: "add-sticker" %>
      </li>
    </ul>
  </div>

  <div class="rightMenu">
    <ul>
      <li>
        <%= link_to "User", products_path, class: "user" %>
      </li>
    </ul>
  </div>

</div>



<div class="container mt-5 formulario">
  <div class="row w-100 justify-content-center">
    <div class="col-xs-12 col-sm-10 col-md-8 ">
      <%= simple_form_for(@product) do |f| %>
        <%= f.input :category, collection: Product::CATEGORIES %>
        <%= f.input :title, placeholder: "Trofeu"%>
        <%= f.input :sticker, placeholder: "FWC2" %>
        <%= f.submit class: 'btn btn-outline-dark' %>
      <% end %>
    </div>
  </div>
</div>
